@base          <http://sweetontology.net/phenPlanetClimate> .
@prefix mrela: <http://sweetontology.net/relaMath/> .
@prefix temp:  <http://sweetontology.net/propTemperature/> .
@prefix stat:  <http://sweetontology.net/propFunction/> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix planet: <http://sweetontology.net/phen/> .
@prefix mass:  <http://sweetontology.net/propChemical/> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix scale: <http://sweetontology.net/stateSpaceScale/> .
@prefix diff:  <http://sweetontology.net/propDifference/> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix climate: <http://sweetontology.net/phenPlanetClimate/> .
@prefix space: <http://sweetontology.net/reprSpace/> .
@prefix srela: <http://sweetontology.net/relaSpace/> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix screla: <http://sweetontology.net/relaSci/> .
@prefix rela:  <http://sweetontology.net/rela/> .

climate:ClimatologicalAverage
        a       owl:Class .

climate:Climate  a           owl:Class ;
        rdfs:subClassOf      planet:PlanetaryPhenomena , stat:TemporalAverage ;
        rdfs:subClassOf      [ a                   owl:Restriction ;
                               owl:onProperty      screla:hasQuantity ;
                               owl:someValuesFrom  mass:Moisture
                             ] ;
        rdfs:subClassOf      [ a                   owl:Restriction ;
                               owl:onProperty      screla:hasQuantity ;
                               owl:someValuesFrom  temp:Temperature
                             ] ;
        owl:equivalentClass  climate:ClimatologicalAverage , climate:ClimaticAverage , climate:ClimateAverage .

climate:ThermalClimate
        a                owl:Class ;
        rdfs:subClassOf  climate:Climate ;
        rdfs:subClassOf  [ a                   owl:Restriction ;
                           owl:onProperty      screla:hasQuantity ;
                           owl:someValuesFrom  temp:Temperature
                         ] .

climate:ClimateAverage
        a       owl:Class .

climate:Drought  a       owl:Class ;
        rdfs:subClassOf  climate:ClimateAnomaly .

climate:NuclearWinter
        a                owl:Class ;
        rdfs:subClassOf  climate:ClimatePhenomena ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    scale:Global ;
                           owl:onProperty  srela:hasSpatialScale
                         ] .

climate:Microclimate  a  owl:Class ;
        rdfs:subClassOf  climate:Climate ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    scale:Microscale ;
                           owl:onProperty  srela:hasSpatialScale
                         ] .

climate:ClimateChange
        a                owl:Class ;
        rdfs:subClassOf  climate:GlobalChange .

climate:Mesoclimate  a   owl:Class ;
        rdfs:comment     "The climate of a natural region of small extent, for example, valley, forest, plantation, and park. Because of subtle differences in elevation and exposure, the climate may not be representative of the general climate of the region."@en ;
        rdfs:subClassOf  climate:Climate ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    scale:Mesoscale ;
                           owl:onProperty  srela:hasSpatialScale
                         ] .

climate:GlobalWarming
        a                owl:Class ;
        rdfs:subClassOf  climate:GlobalChange ;
        rdfs:subClassOf  [ a                  owl:Restriction ;
                           owl:allValuesFrom  climate:GreenhouseEffect ;
                           owl:onProperty     rela:hasPhenomena
                         ] .

climate:ClimateAnomaly
        a                    owl:Class ;
        rdfs:subClassOf      diff:Anomaly , climate:ClimatePhenomena ;
        rdfs:subClassOf      [ a                   owl:Restriction ;
                               owl:onProperty      mrela:deviationFrom ;
                               owl:someValuesFrom  climate:Climate
                             ] ;
        owl:equivalentClass  climate:ClimaticAnomaly .

climate:LocalClimate  a  owl:Class ;
        rdfs:subClassOf  climate:Climate .

climate:GlobalChange  a  owl:Class ;
        rdfs:subClassOf  climate:ClimatePhenomena ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    scale:Global ;
                           owl:onProperty  srela:hasSpatialScale
                         ] .

climate:RegionalClimate
        a                owl:Class ;
        rdfs:subClassOf  climate:Climate .

climate:GreenhouseEffect
        a                owl:Class ;
        rdfs:subClassOf  climate:GlobalWarming .

climate:ClimatePhenomena
        a                owl:Class ;
        rdfs:subClassOf  planet:PlanetaryPhenomena .

climate:ClimaticAverage
        a       owl:Class .

climate:HeatIsland  a    owl:Class ;
        rdfs:subClassOf  climate:ClimatePhenomena ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    scale:Microscale ;
                           owl:onProperty  srela:hasSpatialScale
                         ] .

climate:ClimaticAnomaly
        a       owl:Class .

climate:MoistureClimate
        a                owl:Class ;
        rdfs:subClassOf  climate:Climate ;
        rdfs:subClassOf  [ a                   owl:Restriction ;
                           owl:onProperty      screla:hasQuantity ;
                           owl:someValuesFrom  mass:Moisture
                         ] .

climate:GlobalClimate
        a                owl:Class ;
        rdfs:subClassOf  stat:Average , climate:Climate ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    scale:Global ;
                           owl:onProperty  srela:hasSpatialScale
                         ] ;
        rdfs:subClassOf  [ a                   owl:Restriction ;
                           owl:onProperty      mrela:averageOver ;
                           owl:someValuesFrom  space:Space
                         ] .

<>      a                owl:Ontology ;
        rdfs:label       "SWEET Ontology" ;
        owl:imports      <relaSpace> , <relaSci> , <propDifference> , <phen> , <propFunction> , <rela> , <propTemperature> , <relaMath> , <propChemical> , <reprSpace> , <stateSpaceScale> ;
        owl:versionInfo  "3.1.0" .

climate:Paleoclimate  a  owl:Class ;
        rdfs:comment     "Climate for periods prior to the development of measuring instruments, including historic and geologic time, for which only proxy climate records are available."@en ;
        rdfs:subClassOf  climate:Climate .
