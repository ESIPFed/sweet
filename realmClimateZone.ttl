@base          <http://sweetontology.net/realmClimateZone> .
@prefix mrela: <http://sweetontology.net/relaMath/> .
@prefix cate:  <http://sweetontology.net/propCategorical/> .
@prefix temp:  <http://sweetontology.net/propTemperature/> .
@prefix crela: <http://sweetontology.net/relaClimate/> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix planet: <http://sweetontology.net/realm/> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix climate: <http://sweetontology.net/phenPlanetClimate/> .
@prefix srela: <http://sweetontology.net/relaSci/> .
@prefix sreg:  <http://sweetontology.net/realmRegion/> .
@prefix zone:  <http://sweetontology.net/realmClimateZone/> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix thic:  <http://sweetontology.net/propSpaceThickness/> .
@prefix math:  <http://sweetontology.net/reprMath/> .
@prefix time:  <http://sweetontology.net/reprTimeSeason/> .
@prefix rela:  <http://sweetontology.net/rela/> .
@prefix ptime: <http://sweetontology.net/propTime/> .

zone:Dwb  a           zone:DryWinterClimate , zone:D ;
        rdfs:comment  "The Dwb climate classification is characterized by winter drought and warmest month temperatures below 22 degree C."@en ;
        crela:hasAverageWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasUpperBound  22
                ] .

zone:WetSummerClimate
        a                owl:Class ;
        rdfs:subClassOf  zone:ClimateClassification ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    time:Summer ;
                           owl:onProperty  crela:hasWetSeason
                         ] .

zone:Csa  a                 zone:C ;
        rdfs:comment        "The Csa climate classification is characterized by pronounced summer droughts with 70% of precipitation in the winter and hot summers with its warmest month above 22 degree C."@en ;
        crela:hasAverageWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasLowerBound  22
                ] ;
        crela:hasDrySeason  time:Summer ;
        crela:hasWetSeason  time:Winter .

zone:E  a                owl:Class ;
        rdfs:subClassOf  zone:ClimateClassification .

zone:IceCapClimate  a  zone:E .

zone:HotLowLatitudeDesertClimate
        a       zone:B .

<>      a                owl:Ontology ;
        rdfs:label       "SWEET Ontology" ;
        owl:imports      <propCategorical> , <propTime> , <realmRegion> , <rela> , <relaClimate> , <reprTimeSeason> , <phenPlanetClimate> , <propTemperature> , <relaMath> , <reprMath> , <relaSci> , <realm> ;
        owl:versionInfo  "3.1.0" .

zone:ColdMidlatitudeDesertClimate
        a       zone:B .

zone:Am  a            zone:A ;
        rdfs:comment  "The Am climate classification, also known as Tropical Monsoon Climate, is characterized by a short marked dry season with 1 or more months receiving less than 6 cm of precipitation, an otherwise excessively wet rainy season, and ITCZ dominance for 6 - 12 months out of the year."@en ;
        crela:hasAverageDrySeasonPrecipitation
                [ a                    thic:PrecipitationRange_cm ;
                  mrela:hasUpperBound  6
                ] ;
        crela:hasAverageITCZDominanceDuration
                [ a                    ptime:MonthRange ;
                  mrela:hasLowerBound  6
                ] ;
        owl:sameAs    zone:TropicalMonsoonClimate .

zone:DryClimate  a  owl:Class .

zone:Dwa  a           zone:DryWinterClimate , zone:D ;
        rdfs:comment  "The Dwa climate classification is characterized by winter drought and warmest month temperatures above 22 degree C."@en ;
        crela:hasAverageWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasLowerBound  22
                ] .

zone:TropicalClimate  a  owl:Class .

zone:WetSummerDryWinterClimate
        a                owl:Class ;
        rdfs:subClassOf  zone:WetSummerClimate , zone:DryWinterClimate .

zone:EF  a            zone:E ;
        rdfs:comment  "The EF climate classification, also known as the Ice Cap climate classification, is characterized by having warmest month temperatures below 0 degrees C and having precipitation exceeding very small potential evapotranspiration (POTET)."@en ;
        crela:hasAverageAnnualPrecipitation
                [ a                       thic:PrecipitationRange ;
                  srela:hasLowerQuantity  thic:AnnualPotentialEvapotranspiration
                ] ;
        crela:hasAverageWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasUpperBound  0
                ] ;
        owl:sameAs    zone:IceCapClimate .

zone:SemiAridClimate  a  zone:B .

zone:D  a                owl:Class ;
        rdfs:comment     "The D climate classification, also known as the microthermal climate classification,  is characterized by by having the warmest month of the year above 10 degree C and the coldest below 0 degree C."@en ;
        rdfs:subClassOf  zone:ClimateClassification ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    [ a                    temp:TemperatureRange ;
                                             mrela:hasLowerBound  10
                                           ] ;
                           owl:onProperty  crela:hasAverageWarmestMonthTemperature
                         ] ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    [ a                    temp:TemperatureRange ;
                                             mrela:hasUpperBound  0
                                           ] ;
                           owl:onProperty  crela:hasAverageColdestMonthTemperature
                         ] .

zone:Cwa  a           zone:WetSummerDryWinterClimate , zone:C ;
        rdfs:comment  "the Cwa climate classification is characterized by winter drought, summer's wettest month getting 10 times more precipitation than driest winter month, and the warmest month being above 22 degree C."@en ;
        crela:hasAverageWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasLowerBound  22
                ] .

zone:TropicalSavannaClimate
        a       zone:A .

zone:BS  a            zone:B ;
        rdfs:comment  "The BS climate classification, also known as semiarid climate classification, is characterized by having precipitation amounts greater than 1/2 potential evapotranspiration (POTET), but not equal to it."@en ;
        crela:hasAverageAnnualPrecipitation
                [ a                       thic:PrecipitationRange ;
                  srela:hasLowerQuantity  thic:AnnualHalfPotentialEvapotranspiration ;
                  srela:hasUpperQuantity  thic:AnnualPotentialEvapotranspiration
                ] ;
        owl:sameAs    zone:SemiAridClimate .

zone:ClimateClassification
        a                owl:Class ;
        rdfs:subClassOf  cate:Category .

zone:BSh  a           zone:B ;
        rdfs:comment  "The BSh climate classification, also known as the hot low-latitude steppe, is characterized by having mean annual temperatures greater than 18 degree C."@en ;
        crela:hasAverageAnnualTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasLowerBound  18
                ] ;
        owl:sameAs    zone:HotLowLatitudeSteppeClimate .

zone:Af  a            zone:A ;
        rdfs:comment  "The Af climate classification, also known as the tropical rain forest climate classification, is characterized by monthly precipitation in excess of 6 cm all months out of year."@en ;
        crela:hasAverageMonthlyPrecipitation
                [ a                    thic:PrecipitationRange_cm ;
                  mrela:hasLowerBound  6
                ] ;
        owl:sameAs    zone:TropicalRainForestClimate .

zone:MarineClimate  a    owl:Class ;
        rdfs:comment     "(Also called maritime climate, oceanic climate.) A regional climate under the predominant influence of the sea, characterized by relatively small seasonal variations and high atmospheric moisture content; the antithesis of a continental climate."@en ;
        rdfs:subClassOf  zone:ClimateClassification ;
        rdfs:subClassOf  [ a                   owl:Restriction ;
                           owl:onProperty      rela:hasRealm ;
                           owl:someValuesFrom  planet:Ocean
                         ] .

zone:Aw  a            zone:WetSummerDryWinterClimate , zone:A ;
        rdfs:comment  "The Aw climate classification, also known as Tropical Savanna climate classification, is characterized by a summer wet season, winter dry season, and ITCZ dominance for 6 months or less."@en ;
        crela:hasAverageITCZDominanceDuration
                [ a                    ptime:MonthRange ;
                  mrela:hasUpperBound  6
                ] ;
        owl:sameAs    zone:TropicalSavannaClimate .

zone:C  a                    owl:Class ;
        rdfs:subClassOf      zone:ClimateClassification ;
        rdfs:subClassOf      [ a               owl:Restriction ;
                               owl:hasValue    [ a                    temp:TemperatureRange ;
                                                 mrela:hasLowerBound  10 ;
                                                 mrela:hasUpperBound  22
                                               ] ;
                               owl:onProperty  crela:hasAverageWarmestMonthTemperature
                             ] ;
        rdfs:subClassOf      [ a               owl:Restriction ;
                               owl:hasValue    [ a                    temp:TemperatureRange ;
                                                 mrela:hasLowerBound  0 ;
                                                 mrela:hasUpperBound  18
                                               ] ;
                               owl:onProperty  crela:hasAverageColdestMonthTemperature
                             ] ;
        owl:equivalentClass  zone:TemperateClimate .

zone:Arid  a    zone:B .

zone:HotLowLatitudeSteppeClimate
        a       zone:B .

zone:ColdMidlatitudeSteppeClimate
        a       zone:B .

zone:DryWinterClimate
        a                owl:Class ;
        rdfs:subClassOf  zone:ClimateClassification ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    time:Winter ;
                           owl:onProperty  crela:hasDrySeason
                         ] .

zone:ClimateZoneType  a  owl:Class ;
        rdfs:subClassOf  zone:ClimateClassification .

zone:BWh  a           zone:B ;
        rdfs:comment  "the BWh climate classification, also known as the hot low-latitude desert, is characterized by having mean annual temperatures greater than 18 degree C."@en ;
        crela:hasAverageAnnualTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasLowerBound  18
                ] ;
        owl:sameAs    zone:HotLowLatitudeDesertClimate .

zone:TropicalClimateZone
        a                owl:Class ;
        rdfs:subClassOf  zone:ClimateZoneType .

zone:Dfc  a                             zone:D ;
        rdfs:comment                    "The Dfc climate classification is characterized by having year-round precipitation and having 1 - 4 months above 10 degree C."@en ;
        crela:hasAverageWinterDuration  [ a                    ptime:MonthRange ;
                                          mrela:hasLowerBound  1 ;
                                          mrela:hasUpperBound  4
                                        ] .

zone:ITCZ  a    owl:Class .

zone:AridClimate  a  zone:B .

zone:BW  a            zone:B ;
        rdfs:comment  "The BW climate classification, also known as the arid climate classification, is characterized by having precipitation amounts less than 1/2 potential evapotranspiration (POTET)."@en ;
        crela:hasAverageAnnualPrecipitation
                [ a                       thic:PrecipitationRange ;
                  srela:hasUpperQuantity  thic:AnnualHalfPotentialEvapotranspiration
                ] ;
        owl:sameAs    zone:Arid , zone:AridClimate .

zone:B  a                    owl:Class ;
        rdfs:comment         "Potential evapotranspiration (POTET) exceeds precipitation in all B climates. Subdivisions are based on precipitation timing and amount and mean annual temperature."@en ;
        rdfs:subClassOf      zone:ClimateClassification ;
        rdfs:subClassOf      [ a               owl:Restriction ;
                               owl:hasValue    [ a                       thic:PrecipitationRange ;
                                                 srela:hasLowerQuantity  thic:AnnualPotentialEvapotranspiration
                                               ] ;
                               owl:onProperty  crela:hasAverageAnnualPrecipitation
                             ] ;
        owl:equivalentClass  zone:DryClimate .

zone:Cfc  a                             zone:C ;
        rdfs:comment                    "The Cfc climate classification is charactericized by year-round precipitation and having 1 - 3 months with temperatures above 10 degree C."@en ;
        crela:hasAverageWinterDuration  [ a                    ptime:MonthRange ;
                                          mrela:hasLowerBound  1 ;
                                          mrela:hasUpperBound  3
                                        ] .

zone:TundraClimate  a  zone:E .

zone:Equator  a          owl:Class ;
        rdfs:subClassOf  zone:TropicalClimateZone .

zone:Dwd  a           zone:DryWinterClimate , zone:D ;
        rdfs:comment  "The Dwd climate classification is characterized by winter drought and having coldest month temperatures below -38 degree C (in Siberia only)."@en ;
        crela:hasAverageColdestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasUpperBound  -38
                ] .

zone:TemperateClimate
        a       owl:Class .

zone:Dfb  a           zone:D ;
        rdfs:comment  "The Dfb climate classifcation is characterized by having year-round precipitation and warmest month temperatures below 22 degree C."@en ;
        crela:hasAverageWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasUpperBound  22
                ] .

zone:TropicalMonsoonClimate
        a       zone:A .

zone:ET  a            zone:E ;
        rdfs:comment  "The ET climate classification, also known as the tundra climate classification, is characterizex by warmest month temperatures between 0 - 10 degree C, precipitation exceeds small potential evapotranspiration demand, and has snow cover 8 - 10 months out of the year."@en ;
        crela:hasAverageAnnualPrecipitation
                [ a                       thic:PrecipitationRange ;
                  srela:hasLowerQuantity  thic:AnnualPotentialEvapotranspiration
                ] ;
        crela:hasAverageSnowCoverDuration
                [ a                    ptime:MonthRange ;
                  mrela:hasLowerBound  8 ;
                  mrela:hasUpperBound  10
                ] ;
        crela:hasWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasLowerBound  0 ;
                  mrela:hasUpperBound  10
                ] ;
        owl:sameAs    zone:TundraClimate .

zone:Cfb  a                             zone:C ;
        rdfs:comment                    "The Cfb climate classfication receives year-round precipitation, its warmest month is below 22 degree C and has 4 months above 10 degree C."@en ;
        crela:hasAverageWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasUpperBound  22
                ] ;
        crela:hasAverageWinterDuration  [ a                    ptime:MonthRange ;
                                          mrela:hasLowerBound  4
                                        ] .

zone:A  a                    owl:Class ;
        rdfs:comment         "The A climate classification, also known as the Tropical climate classification, is characterized as being consistently warm with all months averaging above 18 degrees C and having annual precipitation exceeds potential evapotranspiration (POTET)."@en ;
        rdfs:subClassOf      zone:ClimateClassification ;
        rdfs:subClassOf      [ a               owl:Restriction ;
                               owl:hasValue    [ a                    temp:TemperatureRange ;
                                                 mrela:hasLowerBound  18
                                               ] ;
                               owl:onProperty  crela:hasAverageMonthlyTemperature
                             ] ;
        rdfs:subClassOf      [ a               owl:Restriction ;
                               owl:hasValue    [ a                       thic:PrecipitationRange ;
                                                 srela:hasLowerQuantity  thic:AnnualPotentialEvapotranspiration
                                               ] ;
                               owl:onProperty  crela:hasAverageAnnualPrecipitation
                             ] ;
        owl:equivalentClass  zone:TropicalClimate .

zone:IntertropicalConvergenceZone
        a                    owl:Class ;
        rdfs:subClassOf      zone:ClimateZoneType ;
        rdfs:subClassOf      [ a                  owl:Restriction ;
                               owl:allValuesFrom  zone:Equator ;
                               owl:onProperty     rela:hasRealm
                             ] ;
        owl:equivalentClass  zone:ITCZ .

owl:versionInfo  a  owl:AnnotationProperty .

zone:PolarMarineClimate
        a       zone:E .

zone:DesertClimateZone
        a                owl:Class ;
        rdfs:subClassOf  zone:ClimateZoneType .

zone:BSk  a           zone:B ;
        rdfs:comment  "The BSk climate classification, also known as cold midlatitude steppe climate classification, is characterized by having mean annual temperatures less than 18 degree C."@en ;
        crela:hasAverageAnnualTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasUpperBound  18
                ] ;
        owl:sameAs    zone:ColdMidlatitudeSteppeClimate .

zone:TropicalRainForestClimate
        a       zone:A .

zone:Dwc  a                             zone:DryWinterClimate , zone:D ;
        rdfs:comment                    "The Dwc climate classification is characterized by winter drought and haviong 1 - 4 months with temperatures above 10 degrees C."@en ;
        crela:hasAverageWinterDuration  [ a                    ptime:MonthRange ;
                                          mrela:hasLowerBound  1 ;
                                          mrela:hasUpperBound  4
                                        ] .

zone:Csb  a     zone:WetSummerDryWinterClimate , zone:C ;
        crela:hasAverageWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasLowerBound  10 ;
                  mrela:hasUpperBound  22
                ] .

zone:Dfa  a           zone:D ;
        rdfs:comment  "The Dfa climate classification is characterized by having year-round precipitation and warmest month temperatures above 22 degree C."@en ;
        crela:hasAverageWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasLowerBound  22
                ] .

zone:Cfa  a           zone:C ;
        rdfs:comment  "The Cfa climate classification is characterized by year-round precipitation, hot summers, and having the warmest month above 22 degree C."@en ;
        crela:hasAverageWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasLowerBound  22
                ] .

zone:SubtropicalClimateZone
        a                owl:Class ;
        rdfs:subClassOf  zone:ClimateZoneType .

zone:Doldrums  a         owl:Class ;
        rdfs:comment     "A nautical term for the equatorial trough, with special reference to the light and variable nature of the winds."@en ;
        rdfs:subClassOf  zone:ClimateZoneType ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    sreg:LowLatitude ;
                           owl:onProperty  rela:hasRealm
                         ] .

zone:RainShadow  a       owl:Class ;
        rdfs:comment     "A region of sharply reduced precipitation on the lee side of an orographic barrier, as compared with regions upwind of the barrier."@en ;
        rdfs:subClassOf  zone:ClimateZoneType .

zone:EM  a            zone:E ;
        rdfs:comment  "The EM climate classification, also known as the polar marine climate classification, is characterized by all months having temperatures above -7 degree C, warmest month above 0 degree C, and annual temperatures less than 17 degree C."@en ;
        crela:hasAverageAnnualTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasUpperBound  17
                ] ;
        crela:hasAverageMonthlyTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasLowerBound  -7
                ] ;
        crela:hasAverageWarmestMonthTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasLowerBound  0
                ] ;
        owl:sameAs    zone:PolarMarineClimate .

zone:BWk  a           zone:B ;
        rdfs:comment  "The BWk climate classification, also known as the cold midlatitude desert, is characterized by having mean annual temperatures less than 18 degree C."@en ;
        crela:hasAverageAnnualTemperature
                [ a                    temp:TemperatureRange ;
                  mrela:hasUpperBound  18
                ] ;
        owl:sameAs    zone:ColdMidlatitudeDesertClimate .
