@base          <http://sweetontology.net/propTemperatureGradient> .
@prefix mrela: <http://sweetontology.net/relaMath/> .
@prefix tstate: <http://sweetontology.net/stateThermodynamic/> .
@prefix quan:  <http://sweetontology.net/propQuantity/> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix units: <http://sweetontology.net/reprSciUnits/> .
@prefix mrela2: <http://sweetontology.net/relaMath/> .
@prefix ht:    <http://sweetontology.net/propSpaceHeight/> .
@prefix tgrad: <http://sweetontology.net/propTemperatureGradient/> .
@prefix func:  <http://sweetontology.net/reprMathFunction/> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix thermo: <http://sweetontology.net/propTemperature/> .
@prefix rela:  <http://sweetontology.net/rela/> .
@prefix screla: <http://sweetontology.net/relaSci/> .

tgrad:ThermalGradient
        a       owl:Class .

tgrad:EnvironmentalLapseRate
        a                owl:Class ;
        rdfs:comment     "The rate of decrease of temperature with elevation"@en ;
        rdfs:subClassOf  tgrad:LapseRate .

tgrad:AutoConvectiveLapseRate
        a                owl:Class ;
        rdfs:comment     "The environmental lapse rate of temperature in an atmosphere in which the density is constant with height (homogeneous atmosphere), equal to g/R, where g is the acceleration of gravity and R the gas constant."@en ;
        rdfs:subClassOf  tgrad:EnvironmentalLapseRate .

tgrad:NegativeSlope  a        tgrad:TemperatureGradientRange ;
        mrela2:hasUpperBound  "0"^^xsd:double .

tgrad:TemperatureDepthDerivative
        a                owl:Class ;
        rdfs:comment     "The derivative of temperature with respect to depth."@en ;
        rdfs:subClassOf  tgrad:TemperatureGradient ;
        rdfs:subClassOf  [ a                  owl:Restriction ;
                           owl:allValuesFrom  ht:Depth ;
                           owl:onProperty     mrela2:derivativeWithRespectTo
                         ] .

tgrad:TemperatureGradientRange
        a                owl:Class ;
        rdfs:subClassOf  quan:IntervalQuantity ;
        rdfs:subClassOf  [ a                   owl:Restriction ;
                           owl:onProperty      screla:rangeOf ;
                           owl:someValuesFrom  tgrad:TemperatureGradient
                         ] .

tgrad:ThermalProfile  a  owl:Class ;
        rdfs:subClassOf  func:Profile , quan:ThermodynamicQuantity .

<>      a                owl:Ontology ;
        rdfs:label       "SWEET Ontology" ;
        owl:imports      <stateThermodynamic> , <reprMathFunction> , <rela> , <relaMath> , <propSpaceHeight> , <relaSci> , <propQuantity> , <propTemperature> , <reprSciUnits> ;
        owl:versionInfo  "3.1.0" .

tgrad:TemperatureHeightDerivative
        a                owl:Class ;
        rdfs:comment     "The derivative of temperature with respect to height."@en ;
        rdfs:subClassOf  tgrad:TemperatureGradient ;
        rdfs:subClassOf  [ a                  owl:Restriction ;
                           owl:allValuesFrom  ht:Height ;
                           owl:onProperty     mrela2:derivativeWithRespectTo
                         ] .

tgrad:DryAdiabaticLapseRate
        a                owl:Class ;
        rdfs:comment     "A process lapse rate of temperature, the rate of decrease of temperature with height of a parcel of dry air lifted by a reversible adiabatic process through an atmosphere in hydrostatic equilibrium."@en ;
        rdfs:subClassOf  tgrad:LapseRate ;
        rdfs:subClassOf  [ a               owl:Restriction ;
                           owl:hasValue    tstate:DryAdiabatic ;
                           owl:onProperty  rela:hasState
                         ] .

tgrad:TemperatureGradient
        a                    owl:Class ;
        rdfs:comment         "The derivative of temperature."@en ;
        rdfs:subClassOf      quan:ThermodynamicQuantity ;
        rdfs:subClassOf      [ a               owl:Restriction ;
                               owl:hasValue    units:kelvinPerMeter ;
                               owl:onProperty  screla:hasUnit
                             ] ;
        rdfs:subClassOf      [ a                  owl:Restriction ;
                               owl:allValuesFrom  thermo:Temperature ;
                               owl:onProperty     mrela2:hasGradient
                             ] ;
        owl:equivalentClass  tgrad:ThermalGradient .

tgrad:PositiveSlope  a        tgrad:TemperatureGradientRange ;
        mrela2:hasLowerBound  "0"^^xsd:double .

tgrad:LapseRate  a       owl:Class ;
        rdfs:subClassOf  tgrad:TemperatureHeightDerivative .
